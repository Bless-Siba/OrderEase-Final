@model OrderEase.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-right">
    <a href="@Url.Action("GeneratePdf", "Orders", new { OrderID = Model.OrderID })" class="btn btn-success" id="generatePdfButton">
        <i class="fa fa-file-pdf-o"></i>
        <span class="hover-text">Export as PDF</span>
    </a>
</div>

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
    </dl>
</div>

<div>
    <h4>Items</h4>
    <hr />

    @if (Model.Items != null && Model.Items.Any())
    {
        <table class="table table-striped table-borderd">
            <thead class="thead-darks">
                <tr>
                    <th>Item ID</th>
                    <th>Item Name</th>
                    <th>Quantity in Stock</th>
                    <th>Price</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ItemID</td>
                        <td>@item.ItemName</td>
                        <td>@item.QuantityInStock</td>
                        <td>@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items associated with this order.</p>
    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Show All</a>
</div>


